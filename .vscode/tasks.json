{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run tests",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "pytest",
                "test",
                "--cov-report","html:cov_html",
                "--cov=wknn",
                "test/"
            ],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "DEBUG_WKNN":"FALSE"
                },
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}